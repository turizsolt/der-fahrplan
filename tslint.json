{
  "extends": ["tslint:latest", "tslint-react", "tslint-config-prettier", "tslint-config-airbnb", "tslint-sonarts"],
  "rulesDirectory": ["node_modules/tslint-eslint-rules/dist/rules"],
  "rules": {
    "max-line-length":false,
    "no-submodule-imports": false,
    "interface-name": [true, "never-prefix"],
    "object-literal-sort-keys": false,
    "jsx-no-multiline-js": false,
    "jsx-boolean-value": [true, "never"],
    "member-access": [true, "no-public"],
    "member-ordering": [true, {"order": "statics-first"}],
    "only-arrow-functions": [true, "allow-declarations"],
    "array-type": [true, "array-simple"],
    "jsx-use-translation-function": false,
    "no-implicit-dependencies": false,
    "no-any": true,
    "no-empty-interface": false,
    "no-object-literal-type-assertion": false,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "case-insensitive",
        "named-imports-order": "lowercase-last"
      }
    ],
    "import-name": false,
    "variable-name": [true, "check-format", "allow-leading-underscore", "allow-pascal-case"],
    "space-in-parens": false,
    "no-console":false
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.tsx",
      "node_modules/**/*.ts",
      "/**/web-ui-kit/**/*.tsx",
      "/**/web-ui-kit/**/*.ts"
    ]
  }
}
